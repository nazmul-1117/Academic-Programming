    "        else:\n",
    "            print(\"No Solution Found\")\n",
    "    \n",
    "    def is_possible(self, node: int, _color) -> bool:\n",
    "        for i in range(self.total_node):\n",
    "            if self.graph[node][i] == 1 and self.color[i] == _color:\n",
    "                return False\n",
    "        return True\n",
    "    \n",
    "    def display_result(self) -> None:\n",
    "        text_color = [\"\", \"RED\", \"GREEN\", \"BLUE\", \"YELLOW\"]\n",
