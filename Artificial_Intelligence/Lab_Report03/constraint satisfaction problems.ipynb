    "class GraphColoring:\n",
    "    def __init__(self, total_node: int, num_of_colors: int):\n",
    "        self.total_node = total_node\n",
    "        self.num_of_colors = num_of_colors\n",
    "        self.color = [0] * total_node\n",
    "        self.graph = self.graph_generate()\n",
    "    \n",
    "    def graph_generate(self):\n",
    "        # Example graph (you can replace this)\n",
    "        return [\n",
